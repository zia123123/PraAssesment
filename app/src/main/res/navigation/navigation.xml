<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/awalFragment">

    <fragment
        android:id="@+id/awalFragment"
        android:name="org.d3ifcool.praassesment.AwalFragment"
        android:label="fragment_awal"
        tools:layout="@layout/fragment_awal" >
        <action
            android:id="@+id/action_awalFragment_to_segitiga"
            app:destination="@id/segitiga" />
        <action
            android:id="@+id/action_awalFragment_to_persegi"
            app:destination="@id/persegi" />
        <action
            android:id="@+id/fragment_about"
            app:destination="@id/fragment_about" />
    </fragment>
    <fragment
        android:id="@+id/persegi"
        android:name="org.d3ifcool.praassesment.Persegi"
        android:label="fragment_persegi"
        tools:layout="@layout/fragment_persegi" />
    <fragment
        android:id="@+id/segitiga"
        android:name="org.d3ifcool.praassesment.Segitiga"
        android:label="fragment_segitiga"
        tools:layout="@layout/fragment_segitiga" />
    <fragment
        android:id="@+id/fragment_about"
        android:name="org.d3ifcool.praassesment.About"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
</navigation>